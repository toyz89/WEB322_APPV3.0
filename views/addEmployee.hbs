<div class="row">
    <div class="col-md-12">
        <h1>Add Employee</h2>
        <hr />
        <form method="post" action="/employees/add">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="last_name">Last Name:</label>
                            <input class="form-control" id="last_name" name="last_name" type="text"  />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "email">Email:</label>
                            <input class="from-control" id ="email" name="email" type="email" />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "SSN">Social Security Num: </label>
                            <input class="from-control" id ="SSN" name="SSN" type="text" />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "addressStreet">Address (Street): </label>
                            <input class="from-control" id ="addressStreet" name="addressStreet" type="text" />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "addresCity">Address (City): </label>
                            <input class="from-control" id ="addresCity" name="addresCity" type="text" />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "addressState">Address (State): </label>
                            <input class="from-control" id ="addressState" name="addressState" type="text" />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "addressPostal">Address (Zip Code): </label>
                            <input class="from-control" id ="addressPostal" name="addressPostal" type="text" />
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Company Information</legend>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "isManager">Manager: </label>
                            <input class="from-control" id ="isManager" name="isManager" type="checkbox" />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "employeeManagerNum">Employee's Manager Number: </label>
                            <input class="from-control" id ="employeeManagerNum" name="employeeManagerNum" type="text" />
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "status">Status: </label>
                            <input class="from-control" id ="status" name="status" type="radio" value="Full Time"/> Full Time 
                            <input class="from-control" id ="status" name="status" type="radio" value="Part Time"/> Part Time 
                        </div>
                    </div>
                    <div class = "col-md-6">
                        <div class = "from-group">
                            <label for = "hireDate">Hire Date: </label>
                            <input class="from-control" id ="hireDate" name="hireDate" type="text" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Add Employee" /><br /><br /><br />
        </form>
    </div>
</div>